<simulation>
    <output prefix="simulation">
       <properties stride="4" filename="out"> [ step, time, conserved, temperature ] </properties>
        <properties stride="4" filename="pos"> [ atom_x(1;0), atom_x(1;1),atom_x(1;2),atom_x(1;3),atom_x(1;4),atom_x(1;5),atom_x(1;6),atom_x(1;7),atom_x(1;8),atom_x(1;9),atom_x(1;10),atom_x(1;11),atom_x(1;12),atom_x(1;13),atom_x(1;14),atom_x(1;15),atom_x(1;16),atom_x(1;17),atom_x(1;18),atom_x(1;19),atom_x(1;20),atom_x(1;21),atom_x(1;22),atom_x(1;23),atom_x(1;24),atom_x(1;25),atom_x(1;26),atom_x(1;27),atom_x(1;28),atom_x(1;29),atom_x(1;30), atom_x(1;31)  ]  </properties>
         <properties stride="4" filename="for"> [ atom_f(1;0), atom_f(1;1),atom_f(1;2),atom_f(1;3),atom_f(1;4),atom_f(1;5),atom_f(1;6),atom_f(1;7),atom_f(1;8),atom_f(1;9),atom_f(1;10),atom_f(1;11),atom_f(1;12),atom_f(1;13),atom_f(1;14),atom_f(1;15),atom_f(1;16),atom_f(1;17),atom_f(1;18),atom_f(1;19),atom_f(1;20),atom_f(1;21),atom_f(1;22),atom_f(1;23),atom_f(1;24),atom_f(1;25),atom_f(1;26),atom_f(1;27),atom_f(1;28),atom_f(1;29),atom_f(1;30), atom_f(1;31)  ]  </properties>
    </output>
    <total_steps>10000</total_steps>
    <prng> <seed>32345</seed> </prng>
    <ffsocket name="lmpserial" mode="unix">
        <address> water </address>
    </ffsocket>
    <system>
        <initialize nbeads="32">
            <file mode="pdb"> init.pdb </file>
            <velocities mode="thermal" units="kelvin"> 300 </velocities>
        </initialize>
        <forces>
            <force forcefield="lmpserial"> </force>
        </forces>
        <normal_modes>
           <open_paths> [ 1 ] </open_paths>
        </normal_modes>
        <motion mode="dynamics">    
            <dynamics mode="nvt">
                    <thermostat mode="pile_g">
                        <tau units="femtosecond">50</tau>
                        <pile_lambda> 0.1 </pile_lambda>
                    </thermostat>
                    <timestep units="femtosecond"> 0.25</timestep>
            </dynamics>
        </motion>
        <ensemble>
            <temperature units="kelvin">300</temperature>   
        </ensemble>
    </system>
</simulation>


