
#Compile the driver

   cd <ipi-folder>/drivers
   make

#run i-pi

   ipi=<ipi-path>
   python $ipi/bin/i-pi  $ipi/examples/pes/instanton/eckart/3/input.xml

#run the driver (could be in another shell) 

   $ipi/drivers/driver.x -u -m eckart


