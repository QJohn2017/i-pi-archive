<simulation mode="static" verbosity="high">
    <output prefix='min'>
        <properties stride='1' filename='out'>  [ step, potential{electronvolt}] </properties>
        <trajectory stride="1" filename="xc" format="xyz">x_centroid{angstrom}</trajectory>
        <trajectory stride='1' filename='pos'>  positions{angstrom}  </trajectory>
   </output>
   <total_steps>400       </total_steps>
   <ffsocket name="aims" mode="unix" >
       <address> localhost </address>  <latency> 1e-4</latency>
       <port>40054</port>
   </ffsocket>
   <system >
       <initialize nbeads='1'> 
           <file mode='xyz' > trimer.xyz </file>
           <cell mode='abc'> [130.18034026,  170.29206049,  240.21758034] </cell>
       </initialize>
       <forces>
          <force forcefield="aims"> </force>
       </forces>
       <ensemble>
           <temperature units="kelvin">35</temperature>
       </ensemble>
       <motion mode="minimize">
            <optimizer mode="bfgstrm">
                <tolerances>
                    <energy> 1e-5 </energy>
                    <force> 1e-5</force>
                    <position> 1e-5 </position>
                </tolerances>
           </optimizer>
       </motion>
   </system>
</simulation>
